<launch>
  <arg name="robot_name"   default="xarm"/>
  <arg name="end_effector" default="gripper"/>

  <group ns="$(arg robot_name)">
    <node name="teleop_keyboard" pkg="xarm_teleop" type="xarm_teleop_keyboard" output="screen">
      <remap from="kinematics_pose" to="$(arg end_effector)/kinematics_pose"/>
      <param name="end_effector_name" value="$(arg end_effector)"/>
    </node>
  </group>
</launch>
